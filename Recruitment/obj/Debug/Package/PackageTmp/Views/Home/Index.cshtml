
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Candidate List</h2>

<table ng-cloak>
    <thead>
        <tr>
            <th style="display: none;">ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Position</th>
            <th>Curriculum</th>
            <th>Action Requested</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="items in candidateData">
            <td hidden="hidden">{{items.id}}</td>
            <td>{{items.name}}</td>
            <td>{{items.sur_name}}</td>
            <td>{{items.position}}</td>
            <td><a href="/Assets/Uploads/{{items.curriculum}}" target="_blank">View</a></td>
            <td>
                <button ng-model="$scope.Candidate" ng-click="edit(candidateData[$index])">Edit</button>
                <button ng-click="delete($index)">Delete</button>
            </td>
        </tr>
    </tbody>
</table>

<br />
<div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>

<button data-ng-click="add()">Add New Candidate</button>

